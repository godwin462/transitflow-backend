generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
  // previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

enum Role {
  admin
  passenger
  driver
}

enum Gender {
  male
  female
}

enum VehicleCategory {
  car
  truck
  motorcycle
  bus
  tricycle
  bike
}

enum VehicleSize {
  sm
  m
  l
  xl
  xxl
}

enum RideStatus {
  requested
  accepted
  in_progress
  completed
  cancelled
}

model User {
  id              String     @id @unique @default(cuid())
  email           String     @unique
  firstName       String?
  lastName        String?
  phone           String?
  active          Boolean    @default(true)
  activeRole      Role?
  isEmailVerified Boolean    @default(false)
  username        String     @unique
  roles           UserRole[]
  auth            Auth?
  token           AuthToken?
  gender          Gender?
  address         Address?
  dob             DateTime?
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  vehicle         Vehicle?
  shifts          Shift[]
  trips           Trip[]
  locations       Location[]
  otp             Otp?
}

model Otp {
  id         String    @id @default(cuid())
  userId     String    @unique
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  otp        String
  attempts   Int       @default(0)
  retryAfter DateTime?
  expiresAt  DateTime
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model UserRole {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  role   Role
}

model Auth {
  id         String  @id @default(cuid())
  userId     String  @unique
  user       User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  isVerified Boolean @default(false)
  password   String
}

model AuthToken {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  token  String
}

model Address {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  street String
  city   String
  state  String
  zip    String
}

model VehicleImage {
  id        String   @id @default(cuid())
  secureUrl String
  publicId  String
  vehicleId String
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Vehicle {
  id           String          @id @default(cuid())
  userId       String          @unique
  user         User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  images       VehicleImage[]
  make         String
  model        String
  year         Int
  color        String
  licensePlate String          @unique
  capacity     Int
  size         VehicleSize
  vin          String          @unique
  category     VehicleCategory
  isPublic     Boolean         @default(false)
  isVerified   Boolean         @default(false)
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
  shifts       Shift[]
  trips        Trip[]
}

model Location {
  id                 String   @id @default(cuid())
  latitude           Float
  longitude          Float
  address            String
  userId             String
  user               User     @relation(fields: [userId], references: [id])
  shiftOriginId      String?  @unique
  shiftOrigin        Shift?   @relation("ShiftOrigin", fields: [shiftOriginId], references: [id])
  shiftDestinationId String?  @unique
  shiftDestination   Shift?   @relation("ShiftDestination", fields: [shiftDestinationId], references: [id])
  tripOrigin         Trip?    @relation("TripDestination")
  tripDestination    Trip?    @relation("TripOrigin")
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model Shift {
  id          String    @id @default(cuid())
  name        String
  startTime   DateTime
  endTime     DateTime?
  isActive    Boolean   @default(false)
  driverId    String
  driver      User      @relation(fields: [driverId], references: [id], onDelete: Cascade)
  vehicleId   String
  vehicle     Vehicle   @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  origin      Location? @relation("ShiftOrigin")
  destination Location? @relation("ShiftDestination")
}

model Trip {
  id            String   @id @default(cuid())
  startTime     DateTime
  endTime       DateTime
  name          String
  passengerId   String
  passenger     User     @relation(fields: [passengerId], references: [id], onDelete: Cascade)
  vehicleId     String
  vehicle       Vehicle  @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  originId      String   @unique
  origin        Location @relation("TripOrigin", fields: [originId], references: [id])
  destinationId String   @unique
  destination   Location @relation("TripDestination", fields: [destinationId], references: [id])
}
