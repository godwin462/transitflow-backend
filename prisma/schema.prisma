generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
  // previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

enum Role {
  admin
  passenger
  driver
}

enum Gender {
  male
  female
}

enum VehicleCategory {
  car
  truck
  motorcycle
  bus
  tricycle
  bike
}

enum VehicleSize {
  sm
  m
  l
  xl
  xxl
}

enum RideStatus {
  requested
  accepted
  in_progress
  completed
  cancelled
}

model User {
  id         String     @id @unique @default(cuid())
  email      String     @unique
  firstName  String?
  lastName   String?
  phone      String?
  active     Boolean    @default(true)
  activeRole Role?
  isVerified Boolean    @default(false)
  username   String     @unique
  roles      UserRole[]
  auth       Auth?
  token      AuthToken?
  gender     Gender?
  address    Address?
  dob        DateTime?
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  vehicle    Vehicle?
}

model UserRole {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  role   Role
}

model Auth {
  id         String  @id @default(cuid())
  userId     String  @unique
  user       User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  isVerified Boolean @default(false)
  password   String
}

model AuthToken {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  token  String
}

model Address {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  street String
  city   String
  state  String
  zip    String
}

model VehicleImage {
  id        String   @id @default(cuid())
  secureUrl String
  publicId  String
  vehicleId String
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Vehicle {
  id           String          @id @default(cuid())
  userId       String          @unique
  user         User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  images       VehicleImage[]
  make         String
  model        String
  year         Int
  color        String
  licensePlate String          @unique
  capacity     Int
  size         VehicleSize
  vin          String          @unique
  category     VehicleCategory
  isPublic     Boolean         @default(false)
  isVerified   Boolean         @default(false)
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
}
